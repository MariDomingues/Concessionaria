unit UnitRelMes;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Data.DB, Data.Win.ADODB, Vcl.Buttons,
  Vcl.StdCtrls, Vcl.ExtCtrls, frxClass, frxDBSet;

type
  TFormRelMes = class(TForm)
    Panel1: TPanel;
    Label1: TLabel;
    SpeedButton1: TSpeedButton;
    SpeedButton2: TSpeedButton;
    Label3: TLabel;
    Edit1: TEdit;
    frxReport5: TfrxReport;
    frxDBDataset5: TfrxDBDataset;
    ADOQRY_Mes: TADOQuery;
    ADOQRY_MesSoma: TFMTBCDField;
    ADOQRY_MesDataMesAno: TStringField;
    procedure SpeedButton1Click(Sender: TObject);
    procedure SpeedButton2Click(Sender: TObject);
    procedure Edit1Exit(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  FormRelMes: TFormRelMes;

implementation

{$R *.dfm}

procedure TFormRelMes.Edit1Exit(Sender: TObject);
begin
  if Edit1.Text = '' then
    begin
      Application.MessageBox('O campo "Ano" é de preenchimento obrigatório.', 'Atenção', MB_OK + MB_ICONERROR);
      Edit1.SetFocus;
      Abort;
    end;
end;

procedure TFormRelMes.SpeedButton1Click(Sender: TObject);
var StrLiga: String;

begin
  StrLiga:= 'where ';

  ADOQRY_Dia.Close;
    with ADOQRY_Dia.SQL do
      begin
        Clear;
        Add('Select Venda.Codigo, Cliente.Nome as ''Cliente'', Funcionario.Nome as ''Funcionário'', CONVERT ');
        Add('(char, Venda.DtVen, 103) as ''Data'', Venda.ValTotal, Venda.QtdParcela from Venda inner join Cliente');
        Add(' on Venda.Cliente = Cliente.Codigo inner join Funcionario on Venda.Funcionario = Funcionario.Codigo ');

        case ComboBox1.ItemIndex of
          0:
            begin
              Add(StrLiga + 'month(Venda.DtVen) = 1 and year(Venda.DtVen) = ' + Edit1.Text);
            end;

          1:
            begin
              Add(StrLiga + 'month(Venda.DtVen) = 2 and year(Venda.DtVen) = ' + Edit1.Text);
            end;

          2:
            begin
              Add(StrLiga + 'month(Venda.DtVen) = 3 and year(Venda.DtVen) = ' + Edit1.Text);
            end;

          3:
            begin
              Add(StrLiga + 'month(Venda.DtVen) = 4 and year(Venda.DtVen) = ' + Edit1.Text);
            end;

          4:
            begin
              Add(StrLiga + 'month(Venda.DtVen) = 5 and year(Venda.DtVen) = ' + Edit1.Text);
            end;

          5:
            begin
              Add(StrLiga + 'month(Venda.DtVen) = 6 and year(Venda.DtVen) = ' + Edit1.Text);
            end;

          6:
            begin
              Add(StrLiga + 'month(Venda.DtVen) = 7 and year(Venda.DtVen) = ' + Edit1.Text);
            end;

          7:
            begin
              Add(StrLiga + 'month(Venda.DtVen) = 8 and year(Venda.DtVen) = ' + Edit1.Text);
            end;

          8:
            begin
              Add(StrLiga + 'month(Venda.DtVen) = 9 and year(Venda.DtVen) = ' + Edit1.Text);
            end;

          9:
            begin
              Add(StrLiga + 'month(Venda.DtVen) = 10 and year(Venda.DtVen) = ' + Edit1.Text);
            end;

          10:
            begin
              Add(StrLiga + 'month(Venda.DtVen) = 11 and year(Venda.DtVen) = ' + Edit1.Text);
            end;

          11:
            begin
              Add(StrLiga + 'month(Venda.DtVen) = 12 and year(Venda.DtVen) = ' + Edit1.Text);
            end;
        end;
      end;
  ADOQRY_Dia.Open;
  frxreport4.ShowReport;
  FormRelDia.Close;
end;

procedure TFormRelMes.SpeedButton2Click(Sender: TObject);
begin
  Close;
end;

end.
